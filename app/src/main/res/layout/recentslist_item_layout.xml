<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:freecharge="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10.0dip"
    android:layout_marginRight="10.0dip"
    app:cardBackgroundColor="#ffffffff">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recent_item_pic"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <RelativeLayout
            android:id="@+id/item_desc_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12.0dip"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_toRightOf="@id/recent_item_pic">

            <TextView
                android:id="@+id/recent_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4.0dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Unknown"
                android:textColor="#e6000000"
                android:textSize="16dip"
                freecharge:textStyle="bold" />

            <TextView
                android:id="@+id/recent_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recent_item_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3.0dip"
                android:layout_alignLeft="@id/recent_item_name"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="dsfsdf"
                android:textColor="#b3000000"
                android:textSize="12.0dip" />
        </RelativeLayout>

        <TextView
            android:id="@+id/amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="20.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="â‚¹ 0"
            android:textColor="#e6000000"
            android:textSize="16dip"
            freecharge:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>