<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FarmourTheme" parent="@style/Theme.AppCompat">
        <item name="android:textColorPrimary">@color/fc_white</item>
        <item name="android:windowBackground">@color/fc_white</item>
        <item name="android:radioButtonStyle">@style/FarmourTheme.RadioButton.Light</item>
        <item name="android:spinnerStyle">@style/FarmourTheme.Spinner</item>
        <item name="android:spinnerItemStyle">@style/FarmourTheme.SpinnerItem</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/fc_background_light_green</item>
        <item name="android:alertDialogTheme">@style/FarmourTheme.AlertDialogTheme</item>
        <item name="android:alertDialogStyle">@style/FarmourTheme.AlertDialogStyle</item>
    </style>

    <style name="FarmourTheme.SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FarmourTheme.RadioButton.Light" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">20.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/fc_radio_button_light</item>
        <item name="android:drawablePadding">10.0dip</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="FarmourTheme.Spinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/fc_spinner_selector_dark</item>
    </style>

    <style name="FarmourTheme.Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">44.0dip</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">20.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
        <item name="android:minWidth">64.0dip</item>
        <item name="android:minHeight">44.0dip</item>
    </style>

    <style name="FarmourTheme.Edit" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/fc_text_hint_gray</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">35.0dip</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="FarmourTheme.Edit.White" parent="@style/FarmourTheme.Edit">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/fc_text_selector_white</item>
    </style>

    <style name="FarmourTheme.Button.Gray" parent="@style/FarmourTheme.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/fc_button_selector_gray</item>
    </style>

    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="@android:style/Widget">
        <item name="tabIndicatorColor">?colorAccent</item>
        <item name="tabIndicatorHeight">2.0dip</item>
        <item name="tabBackground">?selectableItemBackground</item>
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabPaddingStart">12.0dip</item>
        <item name="tabPaddingEnd">12.0dip</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Design.Tab" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/black_opaque_30</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Button" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Base.TextAppearance.AppCompat" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
    </style>

    <style name="FarmourTheme.Navigation" parent="FarmourTheme">
        <item name="android:textColorPrimary">@color/black_opaque_50</item>
        <item name="android:textColorSecondary">@color/black_opaque_50</item>
    </style>

    <style name="FarmourTheme.ItemTextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white_opaque_90</item>
        <item name="android:textSize">20.0dp</item>
    </style>

    <style name="FarmourTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white_opaque_70</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="FarmourTheme.SellerTextView">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">20.0dip</item>
        <item name="android:textColor">@color/black_opaque_60</item>
        <item name="android:textSize">20.0dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="FarmourTheme.AlertDialogTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="FarmourTheme.AlertDialogStyle">
        <!-- Define background colors of title, message, buttons, etc. here -->
        <item name="android:fullDark">@color/white</item>
        <item name="android:topDark">@color/white</item>
        <item name="android:centerDark">@color/white</item>
        <item name="android:bottomDark">@color/white</item>
        <item name="android:fullBright">@color/white</item>
        <item name="android:topBright">@color/white</item>
        <item name="android:centerBright">@color/white</item>
        <item name="android:bottomBright">@color/white</item>
        <item name="android:bottomMedium">@color/white</item>
        <item name="android:centerMedium">@color/white</item>
    </style>
</resources>